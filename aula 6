def soma(val1,val2):
    resultado = val1 + val2
    print (resultado)

def subitracao(val1,val2):
    resultado = val1 - val2
    print (resultado)
    
def multiplicacao(val1,val2):
    resultado = val1 * val2
    print (resultado)

def divisao(val1,val2):
    resultado = val1 / val2
    print (resultado)


num1 = input ('digite o primeiro numero: ')
num2 = input ('digite o segundo numero: ')

num1 = int(num1)
num2 = int(num2)


operacao = input ('digote o operacao: ')


if operacao == 'soma':    
    soma (num1,num2)

elif operacao == 'subitracao':
    subitracao (num1,num2)

elif operacao == 'multiplicacao':
    multiplicacao (num1,num2)

elif operacao == 'divisao':
    divisao (num1,num2)
